<div class="container">
  <h2 class="row mt-4 mb-5">新規登録</h2>

  <%= form_with model:@user, url:user_registration_path, local:true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <div class="col-md-4"><%= f.label :last_kname, "名字" %></div>
      <div class="col-md-7"><%= f.text_field :last_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-4"><%= f.label :first_name, "名前" %></div>
      <div class="col-md-7"><%= f.text_field :first_name, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-4"><%= f.label :nickname, "ニックネーム(表示名)" %></div>
      <div class="col-md-7"><%= f.text_field :nickname, autofocus: true %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-4"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-md-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-4"><%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %></div>
      <div class="col-md-7"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-4"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
      <div class="col-md-7"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>