<div class="container">
  <h2 class="row mt-4 mb-5">ログイン</h2>

  <%= form_with model:@user, url:new_user_session_path, local:true do |f| %>
    <div class="form-group row">
      <div class="col-md-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-md-7"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="form-group row">
      <div class="col-md-3"><%= f.label :password, "パスワード" %></div>
      <div class="col-md-7"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>