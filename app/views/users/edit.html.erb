<div class="container">
  <h2>マイページ</h2>

  <form>
    <%= form_with model:@user, url: users_path, local:true do |f| %>

      <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
      <label for="inputImage">ProfileImage</label>
      <%= f.attachment_field :image, placeholder: "プロフィール画像" %>

      <div class="form-group row">
        名字<%= f.text_field :last_name, autofocus: true %><br/>
      </div>

      <div class="form-group row">
        名前<%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="form-group row">
        <%= f.label :nickname, "ニックネーム(表示名)" %><br />
        <%= f.text_field :nickname, autofocus: true %>
      </div>

      <div class="form-group row">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group row">
        <%= f.label :introduction, "紹介文" %><br />
        <%= f.text_field :introduction, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "保存する" %>
      </div>
    <% end %>
  </form>
</div>